generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Poll {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  question String
  userId   String
  options  Option[]
}

model Option {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  text   String
  votes  Int    @default(0)
  poll   Poll   @relation(fields: [pollId], references: [id], onDelete: Cascade)
  pollId String @db.ObjectId
}
